<Page
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Freedom.ZHPHMachine.View"
      xmlns:xly="clr-namespace:Freedom.ZHPHMachine.Themes"
      xmlns:Controls="clr-namespace:Freedom.Controls;assembly=Freedom.Controls" 
    x:Class="Freedom.ZHPHMachine.View.PasswordKeyboardPage"
      mc:Ignorable="d" Title="系统">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="2*"/>
        </Grid.RowDefinitions>
        <StackPanel Margin="100,100,100,50" Orientation="Horizontal"  HorizontalAlignment="Center">
            <TextBlock Text="认证密码：" Foreground="{StaticResource HSForeground2}"/>
            <PasswordBox x:Name="input" Height="65"   VerticalAlignment="Center" 
                     VerticalContentAlignment="Center" FontSize="24" Width="600" 
                     KeyDown="Input_KeyDown" PasswordChar="*" />
        </StackPanel>

        <Controls:KeyBorder Grid.Row="1" 
                            HorizontalAlignment="Center" 
                            VerticalAlignment="Top"/>
    </Grid>
</Page>
