                            </StackPanel>
                        </Border>
                        <Button Style="{StaticResource ButtonStyle}" MinHeight="50" Margin="0,10,0,0"
                                Command="{Binding CJSYCommand}" CommandParameter="2">
                            <Button.Content>
                                <TextBox Style="{StaticResource LableTextBox}" IsHitTestVisible="False"
                                         xly:ControlAttachProperty.Label="出境事由："
                                         Text="{Binding HZBookingInfo.CJSYDescription.Description}"  
                                         Width="{Binding RelativeSource={RelativeSource AncestorType={x:Type Button}},Path=ActualWidth}"
                                         Height="{Binding RelativeSource={RelativeSource AncestorType={x:Type Button}},Path=ActualHeight}"/>
                            </Button.Content>
                        </Button>
                        <Button Style="{StaticResource ButtonStyle}" MinHeight="50" Margin="0,10,0,0"
                                Command="{Binding QwdCommand}" CommandParameter="1">
                            <Button.Content>
                                <TextBox Style="{StaticResource LableTextBox}" IsHitTestVisible="False"
                                         xly:ControlAttachProperty.Label="   前往地："
                                         Text="{Binding HZBookingInfo.QwdDescription.Description}"  
                                         Width="{Binding RelativeSource={RelativeSource AncestorType={x:Type Button}},Path=ActualWidth}"
                                         Height="{Binding RelativeSource={RelativeSource AncestorType={x:Type Button}},Path=ActualHeight}"/>
                            </Button.Content>
                        </Button>
                        <Button Style="{StaticResource ButtonStyle}" MinHeight="50" Margin="0,10,0,0"
                                Command="{Binding TextBoxGotFocusCommand}" CommandParameter="1">
                            <Button.Content>
                                <TextBox Style="{StaticResource LableTextBox}" IsHitTestVisible="False"
                                         xly:ControlAttachProperty.Label="办证类别："
                                         Text="{Binding HZBookingInfo.ApplyType.Description}"  
                                         Width="{Binding RelativeSource={RelativeSource AncestorType={x:Type Button}},Path=ActualWidth}"
                                         Height="{Binding RelativeSource={RelativeSource AncestorType={x:Type Button}},Path=ActualHeight}"/>
                            </Button.Content>
                        </Button>

                        
                        <StackPanel Margin="5" Orientation="Vertical" Style="{StaticResource PassportNoteShow}">
                            <TextBlock Text="加注事由"  FontSize="24" Margin="5"/>
