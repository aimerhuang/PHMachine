                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Image Width="229" Source="/Freedom.ZHPHMachine;component/Themes/Resources/Image/twn.png"
                           Margin="83,50" VerticalAlignment="Top"/>
                    <StackPanel Grid.Column="1" Orientation="Vertical" Margin="50">
                        <TextBlock Text="往来台湾通行证" Foreground="{StaticResource HSTipForeground}" FontSize="24" Margin="10,5,5,5"/>
                        <Border Background="{StaticResource btnBackground}" Padding="10" CornerRadius="20" 
                                Margin="5" Visibility="{Binding TWBookingInfo.XCZJHM,Converter={StaticResource boolToVisibilityConverter}}">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="现持证件号：" Margin="10,0"/>
                                <TextBlock Text="{Binding TWBookingInfo.XCZJHM}" />
                                <TextBlock Text="有效期至：" Margin="10,0"/>
                                <TextBlock Text="{Binding TWBookingInfo.XCZJYXQZ,Converter={StaticResource dateValueConverter}}" />
                                <TextBlock Name="TWZJZT" Text="{Binding TWBookingInfo.DJSY}" Margin="30,0,0,0"/>
                            </StackPanel>
                        </Border>
                        <TextBlock Text="申请类型"  FontSize="24" Margin="10,5,5,5"/>
                        <Border Background="{StaticResource btnDullBackground}" Padding="10" CornerRadius="20" 
                                Margin="5,5,5,50">
                            <UniformGrid  Rows="1" Columns="3">
                                <RadioButton x:Name="raallt" Style="{StaticResource RadioButtonStyleTwo}" Content="通行证和签注"  Margin="2" HorizontalAlignment="Center" 
                                             Loaded="Raallt_Loaded"
                                             Command="{Binding SQOpTWNCommand}" CommandParameter="0"/>
                                <RadioButton x:Name="raqzt" Style="{StaticResource RadioButtonStyleTwo}" Content="仅签注"  Margin="2" HorizontalAlignment="Center"
                                             Loaded="Raallt_Loaded" IsEnabled="{Binding TWBookingInfo.IsQZShow}"
                                             Command="{Binding SQOpTWNCommand}" CommandParameter="1"/>
                                <RadioButton x:Name="ratxzt" Style="{StaticResource RadioButtonStyleTwo}" Content="仅通行证"  Margin="2" HorizontalAlignment="Center"
                                             Loaded="Raallt_Loaded" Command="{Binding SQOpTWNCommand}" CommandParameter="2"/>
                            </UniformGrid>
                        </Border>
                        <Button Style="{StaticResource ButtonStyle}" MinHeight="50" Margin="5"
                                Command="{Binding TextBoxGotFocusCommand}" CommandParameter="3">
                            <Button.Content>
                                <TextBox Name="TWTxt" Style="{StaticResource LableTextBox}" IsHitTestVisible="False"
                                         xly:ControlAttachProperty.Label="办证类别："
                                         Text="{Binding TWBookingInfo.ApplyType.Description}" 
                                         Width="{Binding RelativeSource={RelativeSource AncestorType={x:Type Button}},Path=ActualWidth}"
                                         Height="{Binding RelativeSource={RelativeSource AncestorType={x:Type Button}},Path=ActualHeight}" TextChanged="TWTxt_TextChanged"/>
                            </Button.Content>
                        </Button>
                        <StackPanel Orientation="Vertical" Style="{StaticResource TWNShow}">
                            <Button Style="{StaticResource ButtonStyle}" MinHeight="50" Margin="5"
                                Command="{Binding ApplyCommand}" CommandParameter="104">
                                <Button.Content>
                                    <TextBox Style="{StaticResource LableTextBox}" IsHitTestVisible="False"
                                         xly:ControlAttachProperty.Label="申请事由："
                                         Text="{Binding TWBookingInfo.YYQZLIST[0].QZType.Description}"
                                         Width="{Binding RelativeSource={RelativeSource AncestorType={x:Type Button}},Path=ActualWidth}"
                                         Height="{Binding RelativeSource={RelativeSource AncestorType={x:Type Button}},Path=ActualHeight}"/>
                                </Button.Content>
                            </Button>
                            <Button Style="{StaticResource ButtonStyle}" MinHeight="50" Margin="5"
                                Command="{Binding QZTypeCommand}" CommandParameter="904">
                                <Button.Content>
                                    <TextBox Style="{StaticResource LableTextBox}" IsHitTestVisible="False"
                                         xly:ControlAttachProperty.Label="签注种类："
                                         Text="{Binding TWBookingInfo.YYQZLIST[0].QZCount.Description}"
                                         Width="{Binding RelativeSource={RelativeSource AncestorType={x:Type Button}},Path=ActualWidth}"
                                         Height="{Binding RelativeSource={RelativeSource AncestorType={x:Type Button}},Path=ActualHeight}"/>
                                </Button.Content>
                            </Button>
                        </StackPanel>
                    </StackPanel>
                </Grid>
            </TabItem>

        </TabControl>
    </Grid>
</Page>
