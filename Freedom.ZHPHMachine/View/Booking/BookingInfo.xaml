                        <TextBlock Text="普通护照" Foreground="{StaticResource HSTipForeground}" FontSize="24" Margin="10,5,5,5"/>
                        <Border x:Name="Border" Style="{StaticResource Border2Style}" Visibility="{Binding HZBookingInfo.XCZJHM,Converter={StaticResource boolToVisibilityConverter}}">
                            <StackPanel Orientation="Horizontal">
