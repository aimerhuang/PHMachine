<Page x:Class="Freedom.ZHPHMachine.View.CheckPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"  
      xmlns:i="clr-namespace:System.Windows.Interactivity;assembly=System.Windows.Interactivity"
      xmlns:my="clr-namespace:Freedom.Controls;assembly=Freedom.Controls"
      xmlns:gif="http://wpfanimatedgif.codeplex.com"
      mc:Ignorable="d"   
      Title="CheckPage" Unloaded="Page_Unloaded">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <TextBlock FontSize="35" HorizontalAlignment="Center" Margin="0,50,0,10">
            <Run Text="{Binding BookingBaseInfo.CardInfo.FullName}" Foreground="{StaticResource HSTipForeground}"/>
            <Run Text=" 您的预约时间:" Foreground="{StaticResource HSTipForeground}"/> 
            <Run Text="{Binding BookingBaseInfo.BookingTarget.BookingDate,Converter={StaticResource dateValueConverter}}" 
                 Foreground="{StaticResource HSForeground2}"/>
            <Run Text="{Binding BookingBaseInfo.BookingTarget.Title,Mode=OneWay}" Foreground="{StaticResource HSForeground2}"/>
        </TextBlock>
        <TextBlock Grid.Row="1" FontSize="30" HorizontalAlignment="Center" 
                   Foreground="{StaticResource TipBackground}" Margin="10">
            <Run>正在为您打印,请稍后.....</Run>
            <!--倒计时-->
            <!--<Run Text="{Binding StrCountdownValue}" FontSize="35"/>-->
            <!--<Run Text="秒将返回首页"/>-->
        </TextBlock>
        <TextBlock Grid.Row="2" FontSize="30" HorizontalAlignment="Center" 
                   Foreground="{StaticResource TipBackground}" Margin="10,10,10,10">
            <Run>您的排队号为</Run>
            <Run Text="{Binding SendInfo.PREFIX}"  Foreground="{StaticResource HSForeground1}" />
            <Run Text="{Binding SendInfo.PH_NUMBER}" Foreground="{StaticResource HSForeground1}"/>
            <Run Text="等候人数为"/>
            <Run Text="{Binding SendInfo.PH_SUMWAITNUMS}" Foreground="{StaticResource HSForeground1}"></Run>
            <!--<Run Text="{Binding SendInfo.PRINT_GUIDE}"></Run>-->
        </TextBlock>
        <Grid Grid.Row="3" VerticalAlignment="Top">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Image x:Name="GifImage" Grid.ColumnSpan="2" gif:ImageBehavior.AnimatedSource="/Freedom.ZHPHMachine;component/Themes/Resources/Image/sendNo.gif"
                   Height="464"  Margin="10"/>
            <Border Grid.Column="1" Width="343" VerticalAlignment="Top" HorizontalAlignment="Left" 
                    Margin="50,50,10,10" CornerRadius="{StaticResource CornerRadius}" 
                    Background="{StaticResource TipBackground}" Padding="10">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>
                    <StackPanel Orientation="Horizontal">
                        <Image Source="/Freedom.ZHPHMachine;component/Themes/Resources/Image/TipIcon.png" Width="35" />
                        <TextBlock Text="温馨提示：" FontSize="22" Margin="5"/>
                    </StackPanel>
                    <TextBlock Grid.Row="1" Text="请您在屏幕右下方的出票口取走您的派号单,并按照派号纸上的办理指引提示前往下一站办理。"
                               TextWrapping="Wrap" LineHeight="25" FontSize="18" VerticalAlignment="Top" Margin="0,5"/>
                </Grid>
            </Border>
        </Grid>
        
